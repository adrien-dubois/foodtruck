                <h3>JC-Dusse</h3>
                <p><span>@EatTheRoad</span> Officia fugiat consequat nostrud reprehenderit.</p>
            </div>

            {# FACEBOOK PART #}
            <div class="facebook"></div>
            <div class="facebook"></div>
            <div class="facebook"></div>
        </div>
        <div class="social_video_box"></div>
    </div>
</div>

{% endblock %}
